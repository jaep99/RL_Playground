<mujoco model="Unicycle">
    <asset>
        <texture type="2d" name="checkerboard" builtin="checker" rgb1=".1 .1 .1" rgb2=".9 .9 .9" width="512" height="512"/>
        <material name="floor_mat" texture="checkerboard" texrepeat="5 5" texuniform="true"/>
    </asset>
    <option gravity="0 0 -9.81"/>
    <worldbody>
        <geom name="floor" pos="0 0 0" size="5 5 0.1" type="plane" material="floor_mat"/>
        <light pos="0 0 3" dir="0 0 -1" castshadow="false"/>
        <body name="wheel" pos="0 0 0.3">
            <joint name="wheel_free" type="free"/>
            <geom name="wheel_geom" type="cylinder" size="0.3 0.015" rgba="0.8 0.8 0.8 1" euler="90 0 0"/>
            <body name="frame" pos="0 0 0">
                <joint name="frame_to_wheel" type="hinge" axis="0 1 0" pos="0 0 0"/>
                <geom name="frame_wheel_left" type="capsule" size="0.02 0.17" pos="0 -0.05 0.15" rgba="0.2 0.2 0.2 1"/>
                <geom name="frame_wheel_right" type="capsule" size="0.02 0.17" pos="0 0.05 0.15" rgba="0.2 0.2 0.2 1"/>
                <geom name="frame_left" type="capsule" size="0.02 0.03" pos="0 -0.03 0.36" rgba="0.2 0.2 0.2 1" euler="-30 0 0"/>
                <geom name="frame_right" type="capsule" size="0.02 0.03" pos="0 0.03 0.36" rgba="0.2 0.2 0.2 1" euler="30 0 0"/>
                <geom name="frame_top" type="capsule" size="0.02 0.1" pos="0 0.0 0.5" rgba="0.2 0.2 0.2 1" euler="0 0 0"/>
                <geom name="saddle_geom" type="ellipsoid" size="0.1 0.06 0.03" pos="0 0 0.6" rgba="0.6 0.3 0.3 1" euler="0 0 0"/>
            </body>
        </body>
    </worldbody>
    <actuator>
        <motor joint="frame_to_wheel" name="wheel_motor" gear="50"/>
    </actuator>
</mujoco>